{
	"name": "cv-redactor",
	"version": "0.0.2",
	"description": "Redact cvs",
	"main": "main.js",
	"scripts": {
		"prod": "webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
		"start": "webpack-dev-server --hot --host 0.0.0.0 --port 9292 --config=./webpack.dev.config.js --mode development",
		"build": "webpack --config webpack.build.config.js --mode production",
		"postinstall": "electron-builder install-app-deps",
		"dist": "npm run build && electron-builder build --publish always"
	},
	"repository": "https://github.com/guardian/cv-redactor-desktop",
	"keywords": [
		"redactor",
		"cv"
	],
	"build": {
		"appId": "com.theguardian.cv-redactor",
		"files": [
			"dist/",
			"node_modules/",
			"public/",
			"src/",
			"main.js",
			"index.html",
			"package.json"
		],
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		}
	},
	"author": "The Guardian <userhelp@theguardian.com>",
	"dependencies": {
		"convert-array-to-csv": "^1.0.4",
		"hummus": "^1.0.90",
		"lodash": "^4.17.11",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"react-redux": "^5.0.7",
		"redux": "^4.0.1",
		"redux-devtools-extension": "^2.13.5",
		"redux-multi": "^0.1.12",
		"redux-thunk": "^2.3.0",
		"remove-accents": "^0.4.2",
		"slugify": "^1.3.3",
		"uniqid": "^5.0.3"
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-preset-react": "^6.24.1",
		"babili-webpack-plugin": "^0.1.2",
		"css-loader": "^0.28.11",
		"electron": "^1.8.6",
		"electron-builder": "^20.38.3",
		"electron-devtools-installer": "^2.2.4",
		"electron-packager": "^12.0.1",
		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"mini-css-extract-plugin": "^0.4.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-import": "^11.1.0",
		"postcss-loader": "^2.1.4",
		"postcss-nested": "^3.0.0",
		"postcss-pxtorem": "^4.0.1",
		"style-loader": "^0.21.0",
		"webpack": "^4.6.0",
		"webpack-cli": "^2.0.15",
		"webpack-dev-server": "^3.1.3"
	}
}
